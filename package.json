{
  "name": "@boardgamelab/renderer",
  "version": "0.0.1",
  "description": "SVG renderer for Boardgame Lab",
  "scripts": {
    "start": "npm run dev",
    "dev": "rollup --config --watch",
    "ts": "tsc --noEmit",
    "ts:watch": "tsc --noEmit --watch",
    "lint": "prettier --check **/*.js",
    "prettier": "prettier --write **/*.{js,svelte}"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.js.map",
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "author": "Nicolo Davis <nicolodavis@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "rollup-plugin-sourcemaps": "^0.5.0",
    "shortid": "^2.2.15",
    "svelte-icons": "^2.1.0"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@boardgamelab/components": "^0.0.17",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@types/lodash.throttle": "^4.1.6",
    "@types/shortid": "0.0.29",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.1.0",
    "husky": ">=1",
    "lint-staged": ">=8",
    "lodash.throttle": "^4.1.1",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-svelte": "^4.0.6",
    "postcss": "^8.2.10",
    "prettier": "1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^2.39.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-polyfill-node": "^0.5.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "svelte": "^3.32.3",
    "svelte-preprocess": "^4.6.9",
    "tailwindcss": "^2.0.3",
    "ts-loader": "^6.2.2",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write"
    ]
  }
